{
    "name": "seblhaire/formsbootstrap",
    "type": "library",
    "description" : "A Laravel library to generate forms based on Laravel Collective Forms & HTML, Boostrap 5 CSS Framework, RichText editor, and Icons provided by FontAwesome. Includes form management and validation.",
    "license": "MIT",  
    "authors": [
        {
            "name": "SÃ©bastien L'haire",
            "email": "sebastien@lhaire.org"
        }
    ],
    "require": {
      "illuminate/http": "^8.0|^9.0",
      "laravelcollective/html": "^6.2",
       "danielstjules/stringy": "~3.1.0"
    },
    "autoload": {
        "psr-4": {
            "Seblhaire\\Formsbootstrap\\": "src/"
        }
    },
    "extra": {
      "laravel": {
          "providers": [
            "Collective\\Html\\HtmlServiceProvider",
            "Seblhaire\\Formsbootstrap\\FormsBootstrapServiceProvider"
          ],
          "aliases": {
              "Form": "Collective\\Html\\FormFacade",
              "Html": "Collective\\Html\\HtmlFacade"
          }
        }
    }
}
